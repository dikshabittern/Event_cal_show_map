<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<p id="notice"><%= notice %></p>
<div class="row">
  <h1>Events</h1>
    <%= form_tag "/events", :method=>"get" do %>
      <%= text_field_tag :search, nil, :placeholder=>"search event" %>
      <%= submit_tag "search"%>
    <% end %>
  <h1>Categories</h1>
    <%= select_tag "Select", options_from_collection_for_select( @categories, "id", "category_name"), class: "my_filter form-control select_subcategory",style: "" %>
</div>
<!--   Show events on table -->
<div class="table-responsive">
<table class="table table-hover">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Category</th>
        <th>Address</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>City</th>
        <th>State</th>
        <th>Zip_code</th>
        <th>Country</th>
        <th>Start_date</th>
        <th>End_date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
          <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.category.try(:category_name) %></td>
        <td><%= event.address %></td>
        <td><%= event.latitude %></td>
        <td><%= event.longitude %></td>
        <td><%= event.city %></td>
        <td><%= event.state %></td>
        <td><%= event.zip_code %></td>
        <td><%= event.country%></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= link_to 'Show', event, :class=>"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_event_path(event), :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %></td>
      </tr>
          <% end %>
    </tbody>
  </table>
<br>

<!--  Map Container  -->

<div class="container">
  <div id="map"  style="width: 96%; height: 400px; text-align: center;" ></div>
</div>
<br><br>

<!-- Show All Events %> -->
  
<div class="text-center"><h3> events</h3></div>
<% @events.each do |event| %>
  <div class="container newwidth">
    <div class="wrapper">
      <div class="box c">
        Start_date: <%= event.start_date.try(:strftime, "%d/%m/%y" ) %><br>
        End_date: <%= event.end_date.try(:strftime, "%d/%m/%y" ) %>
      </div>
      <div class="box d" id="loc">
        <%= event.title %><br>
        <%= event.description %>
        <%= event.city %>
        <%= event.state %>
      </div>
    </div>
  </div>
<% end %>
<center>
  <%= will_paginate @events, :renderer=> BootstrapPagination::Rails, previous_label: "Older", next_label: "Newer", inner_window: 1, outer_window: 0 %>
</center>

